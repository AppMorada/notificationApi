{
  "name": "MoradaApp.notificationApi",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "ISC",
  "scripts": {
    "build": "nest build",
    "build:watch": "nest build -w",
    "firestore": "sh -c ./tools/firestore.sh",
    "set-hooks": "husky",
    "pre-commit": "lint-staged --allow-empty",
    "format": "prettier --write",
    "lint:fix": "eslint --fix",
    "test": "dotenv -e .env.test -- jest -c jest.unit.config.ts",
    "test:e2e": "dotenv -e .env.prod -- jest --detectOpenHandles ----runInBand -c jest.e2e.config.ts",
    "test:all:cov": "dotenv -e .env.prod -- jest -c jest.config.ts --detectOpenHandles --coverage",
    "dev": "dotenv -e .env -- nest start --watch",
    "dev:debug": "dotenv -e .env -- nest start --debug 0.0.0.0:9229 --watch",
    "start": "dotenv -e .env.prod -- node ./dist/index.js",
    "firestore:run": "firebase emulators:start --only firestore",
    "commit": "cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "(src|tests|docs)/**/*.(t|j)s": [
      "pnpm format",
      "pnpm lint:fix"
    ]
  },
  "keywords": [],
  "author": "",
  "devDependencies": {
    "@commitlint/config-conventional": "^19.2.2",
    "@compodoc/compodoc": "^1.1.24",
    "@eslint/js": "^9.3.0",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/platform-express": "^10.3.8",
    "@nestjs/testing": "^10.3.8",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "commitizen": "^4.3.0",
    "commitlint": "^19.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "globals": "^15.2.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "playwright": "^1.44.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.9.0"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.8",
    "@nestjs/core": "^10.3.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "express": "^4.19.2",
    "firebase-admin": "^12.1.0",
    "reflect-metadata": "^0.2.2",
    "winston": "^3.13.0"
  }
}
